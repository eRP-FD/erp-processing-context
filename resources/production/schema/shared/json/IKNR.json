{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "IKNR",
  "oneOf": [
    {
      "$ref": "#/definitions/IKNR_Identifier"
    }
  ],
  "definitions": {
    "IKNR_Identifier": {
      "properties": {
        "id": {
          "$ref": "BaseSchema.json#/definitions/string"
        },
        "extension": {
          "items": {
            "$ref": "BaseSchema.json#/definitions/Extension"
          },
          "type": "array"
        },
        "use": {
          "enum": [
            "official"
          ]
        },
        "_use": {
          "$ref": "BaseSchema.json#/definitions/Element"
        },
        "type": {
          "$ref": "#/definitions/IKNR_CodeableConcept"
        },
        "_system": {
          "$ref": "BaseSchema.json#/definitions/Element"
        },
        "system": {
          "enum": [
            "http://fhir.de/NamingSystem/arge-ik/iknr"
          ]
        },
        "value": {
          "type": "string",
          "pattern": "^[0-9]{9}$"
        },
        "_value": {
          "$ref": "BaseSchema.json#/definitions/Element"
        },
        "period": {
          "$ref": "BaseSchema.json#/definitions/Period"
        },
        "assigner": {
          "$ref": "BaseSchema.json#/definitions/Reference"
        }
      },
      "required": [
        "system",
        "value"
      ],
      "additionalProperties": false
    },
    "IKNR_CodeableConcept": {
      "properties": {
        "id": {
          "$ref": "BaseSchema.json#/definitions/string"
        },
        "extension": {
          "items": {
            "$ref": "BaseSchema.json#/definitions/Extension"
          },
          "type": "array"
        },
        "coding": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "XX-Type.json#/definitions/XX-Type"
          },
          "additionalItems": {
            "$ref": "BaseSchema.json#/definitions/Coding"
          }
        },
        "text": {
          "$ref": "BaseSchema.json#/definitions/string"
        },
        "_text": {
          "$ref": "BaseSchema.json#/definitions/Element"
        }
      },
      "additionalProperties": false,
      "required": [
        "coding"
      ]
    }
  }
}